<% if logged_in? %>
  Welcome <%= current_customer.name %>
  <%= link_to "Logout", logout_path, method: :delete %>

<% else %>
<%= link_to "Login", login_path %>
<%= link_to "Sign Up", sign_up_path %>

<% end %>

<h1>This is a list of products</h1>
<ul>
  <% for product in @products %>
    <li><%= product.name %></li>
  <% end %>
</ul>

